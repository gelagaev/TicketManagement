FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["src/Auth/Auth.csproj", "src/src/Auth/"]
COPY ["src/Infrastructure/Infrastructure.csproj", "src/src/Infrastructure/"]
COPY ["src/Core/Core.csproj", "src/src/Core/"]
COPY ["src/Kernel/Kernel.csproj", "src/src/Kernel/"]
RUN dotnet restore "src/src/Auth/Auth.csproj"
RUN dotnet restore "src/src/Infrastructure/Infrastructure.csproj"
RUN dotnet restore "src/src/Core/Core.csproj"
RUN dotnet restore "src/src/Kernel/Kernel.csproj"
WORKDIR "/src/src/"
COPY . .
RUN dotnet build "src/Auth/Auth.csproj" -c Release -o /app/build
#
FROM build AS publish
RUN dotnet publish "src/Auth/Auth.csproj" -c Release -o /app/publish /p:UseAppHost=false
#
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Auth.dll"]
